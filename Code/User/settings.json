{
    "breadcrumbs.icons": false,

    "editor.detectIndentation": true,
    "editor.fontFamily": "monospace",
    "editor.rulers": [99],
    "editor.tabSize": 4,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,

    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "extensions.ignoreRecommendations": true,

    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,

    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
    },
    "files.watcherExclude": {
        "**/.venv/**": true
    },

    "keyboard.dispatch": "keyCode",

    "search.mode": "reuseEditor",

    "terminal.integrated.shell.linux": "/bin/bash",

    "window.newWindowDimensions": "fullscreen",
    "window.openFoldersInNewWindow": "off",
    "window.restoreFullscreen": true,
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,

    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Default Light+",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": null,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 28,
    "workbench.tips.enabled": false,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,

    // Extensions
    "github.gitAuthentication": false,

    "git.autoStash": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.pullTags": true,
    "git.pruneOnFetch": true,
    "git.showPushSuccessNotification": true,
    "git.untrackedChanges": "separate",

    "indentRainbow.colors": [
        "rgba(127,255,127,0.2)",
        "rgba(255,127,255,0.2)",
        "rgba(79,236,236,0.2)",
        "rgba(255,255,64,0.2)",
    ],

    "projectManager.git.baseFolders": [
        "~/projects"
    ],
    "projectManager.git.maxDepthRecursion": 2,

    "rest-client.previewColumn": "current",

    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        // Code
        { "before":["<leader>", "c", "c"], "commands":["workbench.action.showCommands",], },
        { "before":["<leader>", "c", "q"], "commands":["workbench.action.closeWindow",], },
        { "before":["<leader>", "c", "r"], "commands":["workbench.action.reloadWindow",], },
        // Files
        { "before":["<leader>", "f", "f"], "commands":["breadcrumbs.toggleToOn",], },
        { "before":["<leader>", "f", "p"], "commands":["projectManager.listProjects",], },
        { "before":["<leader>", "f", "n"], "commands":["extension.advancedNewFile",], },
        {
            "before":["<leader>", "f", "r"], "after":[],
            "commands":["opensshremotes.openEmptyWindowInCurrentWindow",],
        },

        // Search
        {
            "before":["<leader>", "s", "s"], "commands":["workbench.action.findInFiles"], },
        // Git
        { "before":["<leader>", "g", "e"], "commands":["workbench.scm.focus",], },
        { "before":["<leader>", "g", "g"], "commands":["git.openAllChanges",], },
        { "before":["<leader>", "g", "d"], "commands":["git.openChange",], },
        { "before":["<leader>", "g", "f"], "commands":["git.pull",], },
        { "before":["<leader>", "g", "p"], "commands":["git.push",], },
        { "before":["<leader>", "g", "c"], "commands":["git.commit",], },
        { "before":["<leader>", "g", "s"], "commands":["git.stage",], },
        { "before":["<leader>", "g", "u"], "commands":["git.unstage",], },
        { "before":["<leader>", "g", "r"], "commands":["git.clean",], },
        { "before":["<leader>", "g", "j"], "commands":["gitlens.diffWithPrevious",], },
        { "before":["<leader>", "g", "k"], "commands":["gitlens.diffWithNext",], },
        // Extensions
        { "before":["<leader>", "e", "r"], "commands":["rest-client.request",], },
        { "before":["<leader>", "e", "p", "r"], "commands":["python.execInTerminal",], },
    ],
    "vim.visualModeKeyBindings": [
        // Git
        { "before":["<leader>", "g", "s"], "commands":["git.stageSelectedRanges",], },
        { "before":["<leader>", "g", "u"], "commands":["git.unstageSelectedRanges",], },
        { "before":["<leader>", "g", "r"], "commands":["git.revertSelectedRanges",], },
    ],
    "vim.insertModeKeyBindings": [],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before":[">"], "after":[">",">"], "commands":[], },
        { "before":["<"], "after":["<","<"], "commands":[], },
        { "before":["<leader>","h"], "after":["<leader>","<leader>","h"], "commands":[], },
        { "before":["<leader>","j"], "after":["<leader>","<leader>","j"], "commands":[], },
        { "before":["<leader>","k"], "after":["<leader>","<leader>","k"], "commands":[], },
        { "before":["<leader>","l"], "after":["<leader>","<leader>","l"], "commands":[], },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before":[">"], "after":[">","g","v"], "commands":[], },
        { "before":["<"], "after":["<","g","v"], "commands":[], },
    ],
    "vim.insertModeKeyBindingsNonRecursive": [],
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-s>": false,
        "<C-c>": false,
        "<C-v>": true,
        "<C-x>": false,
    },

    "vim.easymotion": true,
    // "vim.sneak": true,

    "vim.autoindent": false,
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
}
